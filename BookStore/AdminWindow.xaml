<Window x:Class="BookStore.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookStore"
        mc:Ignorable="d"
        Title="AdminWindow" Height="450" Width="800" WindowStartupLocation="CenterScreen" Background="#FFFFD198">
    <Window.Resources>
        <Style x:Key="{ComponentResourceKey ResourceId=DataGridSelectAllButtonStyle, TypeInTargetAssembly={x:Type DataGrid}}" TargetType="{x:Type Button}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Grid>
                            <Rectangle x:Name="Border" Fill="{DynamicResource {x:Static SystemColors.ControlBrushKey}}" SnapsToDevicePixels="True"/>
                            <Polygon x:Name="Arrow" Fill="Black" HorizontalAlignment="Right" Margin="8,8,3,3" Opacity="0.15" Points="0,10 10,10 10,0" Stretch="Uniform" VerticalAlignment="Bottom"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Stroke" TargetName="Border" Value="{DynamicResource {x:Static SystemColors.ControlDarkBrushKey}}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Fill" TargetName="Border" Value="{DynamicResource {x:Static SystemColors.ControlDarkBrushKey}}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Visibility" TargetName="Arrow" Value="Collapsed"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Шапка -->
            <RowDefinition Height="*"/>
            <!-- Таблица -->
            <RowDefinition Height="Auto"/>
            <!-- Подвал -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <!-- Левое боковое меню -->
            <ColumnDefinition Width="*"/>
            <!-- Главная рабочая зона -->
        </Grid.ColumnDefinitions>

        <!-- Шапка таблицы -->
        <Label Content="Таблицы" Grid.Row="0" Grid.Column="0" Margin="0,0,0,10" FontSize="24" FontWeight="Bold"/>

        <!-- Боковое меню (список таблиц) -->
        <ListBox x:Name="TableListBox" d:ItemsSource="{d:SampleData ItemCount=5}" Grid.Row="1" Grid.Column="0" Margin="0,0,10,0" SelectionChanged="BookListBox_SelectionChanged" Background="#FFE2CAAC"/>

        <!-- Сохранение изменений -->
        <Button x:Name="SaveButton" Content="Сохранить изменения" Grid.Row="2" Grid.Column="0" Margin="0,10,0,0" Height="31" Width="131" Click="SaveButton_Click" Background="#FFE2CAAC"/>

        <!-- Главное поле DataGrid -->
        <Border Grid.Row="1" Grid.Column="1" Background="#FFE2CAAC">
            <DataGrid x:Name="TableDataGrid" HeadersVisibility="Column" d:ItemsSource="{d:SampleData ItemCount=5}" CanUserAddRows="True" CanUserDeleteRows="True" AutoGeneratingColumn="AutoGenColumns" AutoGenerateColumns="True" Background="#FFE2CAAC" RowBackground="#FFE2CAAC">
                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#FFE2CAAC"/>
                    </Style>
                </DataGrid.ColumnHeaderStyle>
                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Setter Property="Background" Value="#FFE2CAAC"/>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#FFB1A08A"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.RowStyle>
            </DataGrid>
        </Border>

        <!-- Заказ книг -->
        <Button x:Name="OrderButton" Content="Заказать Книги" Grid.Row="2" Grid.Column="1" Margin="0,10,0,0" Height="24" Width="115" Click="OrderButton_Click" Background="#FFE2CAAC"/>
    </Grid>
</Window>