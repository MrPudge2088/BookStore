<Window x:Class="BookStore.ManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookStore"
        mc:Ignorable="d"
        Title="ManagerWindow" Height="450" Width="800" WindowStartupLocation="CenterScreen" Background="#FFFFD198">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Первая строка для названия -->
            <RowDefinition Height="*"/>
            <!-- Основное пространство -->
            <RowDefinition Height="Auto"/>
            <!-- Дополнительная нижняя панель -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>

            <ColumnDefinition Width="*"/>

        </Grid.ColumnDefinitions>

        <!-- Надпись 'Таблицы' -->
        <Label Content="Таблицы" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="24" FontWeight="Bold"/>

        <!-- Список таблиц -->
        <ListBox x:Name="TableListBox" d:ItemsSource="{d:SampleData ItemCount=5}" Grid.Row="1" Grid.Column="0" Margin="0,10,0,15" SelectionChanged="BookListBox_SelectionChanged" Background="#FFE2CAAC"/>

        <!-- Кнопка сохранения -->
        <Button x:Name="SaveButton" Content="Сохранить изменения" Grid.Row="2" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center" Height="31" Width="131" Click="SaveButton_Click" Background="#FFE2CAAC"/>

        <!-- Кнопка заказа -->
        <Button x:Name="OrderButton" Content="Заказать Книги" Grid.Row="2" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Height="31" Width="142" Click="OrderButton_Click" Background="#FFE2CAAC"/>

        <!-- Данные таблицы -->
        <Border Grid.Row="1" Grid.Column="1" Background="#FFE2CAAC" Margin="10,0,0,10">
            <DataGrid x:Name="TableDataGrid" HeadersVisibility="Column" d:ItemsSource="{d:SampleData ItemCount=5}" CanUserAddRows="True" CanUserDeleteRows="True" AutoGeneratingColumn="AutoGenColumns" AutoGenerateColumns="True" Grid.ColumnSpan="2" Background="#FFE2CAAC" RowBackground="#FFE2CAAC">
                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#FFE2CAAC"/>
                    </Style>
                </DataGrid.ColumnHeaderStyle>
                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Setter Property="Background" Value="#FFE2CAAC"/>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#FFB1A08A"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.RowStyle>
            </DataGrid>
        </Border>
    </Grid>
</Window>
