<Window x:Class="BookStore.Carts"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookStore"
        mc:Ignorable="d"
        Title="Carts" Height="450" Width="800" WindowStartupLocation="CenterScreen" Background="#FFFFD198">

    <Window.Resources>
        <local:AmountConvert x:Key="AmountConvert"/>
    </Window.Resources>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Ряд для заголовка -->
            <RowDefinition Height="*"/>
            <!-- Основная область для списка товаров -->
            <RowDefinition Height="Auto"/>
            <!-- Ряд для нижней панели с кнопками -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <!-- Колонка для основной части страницы -->
            <ColumnDefinition Width="Auto"/>
            <!-- Колонка для правой кнопки возврата -->
        </Grid.ColumnDefinitions>

        <!-- Надпись "Корзина" -->
        <Label Content="Корзина" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="24" FontWeight="Bold"/>

        <!-- Список книг -->
        <ListBox x:Name="BookListBox" d:ItemsSource="{d:SampleData ItemCount=5}" Grid.Row="1" Grid.Column="0" Margin="0,10,0,10" Background="#FFE2CAAC">
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                </Style>
            </ListBox.ItemContainerStyle>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border>
                        <StackPanel>
                            <TextBlock Text="{Binding Book.Name}" FontSize="16" FontStyle="Normal" FontWeight="Bold"/>

                            <TextBlock Text="{Binding Book.Genre}" Margin="80,0,0,0"/>
                            <TextBlock Text="       "/>
                            <TextBlock Text="{Binding Book.Description}"/>
                            <DockPanel HorizontalAlignment="Right">
                                <TextBlock Text="Кол-во: " Margin="0,10,10,10" FontSize="16"/>
                                <TextBlock Text="{Binding Amount}" Margin="0,10,80,10" FontSize="16"/>
                            </DockPanel>

                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!-- Кнопка покупки -->
        <Button x:Name="BuyButton" Content="Приобрести книги" Grid.Row="2" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Center" Height="31" Width="131" Click="BuyButton_Click" Margin="105,0,0,0" Background="#FFE2CAAC"/>

        <!-- Кнопка возвращения в магазин -->
        <Button x:Name="ReturnButton" Content="Вернуться в магазин" Grid.Row="0" Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Top" Height="20" Width="138" Click="ReturnButton_Click" Background="#FFE2CAAC"/>
    </Grid>
</Window>
